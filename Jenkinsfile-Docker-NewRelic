pipeline {
    agent { label 'ansible-node' }

    stages {

        stage('Cleanup Docker Containers and Images') {
            steps {
                script {
                    echo 'ðŸ§¹ Cleaning up all local Docker containers and images...'
                    sh 'docker rm -f $(docker ps -qa) || true'
                    sh 'docker rmi -f $(docker images -qa) || true'
                }
            }
        }

        stage('Build Docker Image - NewRelic Integration') {
            steps {
                dir("${WORKSPACE}") {
                    sh 'ansible-playbook docker-build-playbook.yaml'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                dir("${WORKSPACE}") {
                    sh 'ansible-playbook docker-run-playbook.yaml'
                }
            }
        }

    } // end of stages
} // end of pipeline
